void shansuo(void)//È«²¿µÆÉÁË¸
	{
uchar i;
for(i=0;i<3;i++)
{
P0=0xff;	P1=0xff;	P2=0xff;	P3=0xff;
delay();	delay();
P0=0x00;	P1=0x00;	P2=0x00;	P3=0x00;
delay();	delay();
}
	}
 
