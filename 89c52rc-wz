void sxb(void)//ÉÏÏÂ°ë
{
  unsigned char i;
P0=0xff;P1=0xff;
P2=0x00;P3=0x00;
delay();delay();delay();delay();
  for(i=0;i<8;i++) 
    {
		P0=Tab11[i];
 	   P1=Tab11[i];
		delay();
	 }
  for(i=0;i<8;i++) 
    {
		P0=Tab11[i];
 	   P1=Tab11[i];
		delay();
	 }
  for(i=0;i<8;i++) 
    {
		P0=Tab11[i];
 	   P1=Tab11[i];
		delay();
	 }
for(i=0;i<3;i++)
{ 
P0=0x00;P1=0x00;
delay();delay();
P0=0xff;P1=0xff;
delay();delay();
}
}
